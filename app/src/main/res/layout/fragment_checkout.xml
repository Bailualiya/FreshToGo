<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Select a Payment Method"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioGroup
            android:id="@+id/card_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/confirm_cvv_input"
            android:hint="Enter CVV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textSize="16sp" />


        <Button
            android:id="@+id/add_card_button"
            android:text="Add New Card"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E0E7FF"
            android:textColor="#1D4ED8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/pay_now_button"
            android:text="Pay Now"
            android:layout_marginTop="24dp"
            android:backgroundTint="#22C55E"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
