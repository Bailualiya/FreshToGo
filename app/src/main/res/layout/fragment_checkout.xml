<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8FAFC">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:paddingBottom="16dp" />

    <!-- Display Saved Cards -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a saved card"
        android:textSize="16sp"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <!-- Container for saved cards, dynamically populated -->
    <LinearLayout
        android:id="@+id/card_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">
        <!-- Dynamically added card buttons will go here -->
    </LinearLayout>

    <!-- Button to Add New Card -->
    <Button
        android:id="@+id/add_card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Card"
        android:backgroundTint="#22C55E"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

    <!-- Enter Security Code for Selected Card -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Security Code"
        android:textSize="16sp"
        android:textColor="#1F2937"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/security_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Security Code"
        android:textSize="14sp"
        android:textColor="#1F2937"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="number" />

    <!-- Proceed to Pay Now -->
    <Button
        android:id="@+id/pay_now_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:textColor="#FFFFFF"
        android:backgroundTint="#22C55E"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</LinearLayout>
